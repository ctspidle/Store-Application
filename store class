public class store {
    private String name, location, owner, phoneNum;
    private Item[] list;
    private int itemCount;
    
    public store()
    {
        name = "wallmart";
        location = "NJ";
        owner = "Bob";
        phoneNum = "973-123-4567";
        list[0] = new Item();
        itemCount = 1;
    }
    
    public void setName(String a)
    {
        name = a;
    }
    
    public void setLocation(String a)
    {
        location = a;
    }
    
    public void setOwner(String a)
    {
        owner = a;
    }
    
    public void setPhoneNum(String a)
    {
        phoneNum = a;
    }
    
    public void addItem()
    {
        itemCount++;
        list[itemCount] = new Item();
    }
    
    public void setItemName(int a, String b)
    {
        list[a].setName(b);
    }
    
    public void setItemQuality(int a, String b)
    {
        list[a].setQuality(b);
    }
    
    public void setItemStock(int a, int b)
    {
        list[a].setNum(b);
    }
    
    public void setItemCost(int a, double b)
    {
        list[a].setCost(b);
    }
    
    public void setItemPrice(int a, double b)
    {
        list[a].setPrice(b);
    }
    
    public double buyItem(int a)
    {
        double c = list[a].getPrice();
        
        list[a].buy();
        
       return c; 
    }
    
    public int getItemByName(String a)
    {
        int b = 0;
        
        boolean nameNotFound = true;
               
        while(!nameNotFound && b > itemCount )
        {
            String d = list[b].getName();
            
            if (d.equals(a))
            {
                nameNotFound = false;
                
                    
            }
            else
            {
                b++;
            }
            
        }     
        if(nameNotFound && list[b].getNum()!= 0)
        {
            return b;
        }
        else
        {
            return -1;
        }
        
    }
    
}

